<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_evaluate_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="21dp"
            android:src="@mipmap/touxiang_muy_icon_normal_"
            android:id="@+id/iv_evaluate_header"
            android:layout_width="33dp"
            android:layout_height="33dp" />

        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_evaluate_header"
            android:id="@+id/tv_evaluate_people_name"
            android:text="奥特曼"
            android:textSize="13sp"
            android:textColor="@color/text_color_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/text_grey"
            android:text="打卡登记卡加大科技大咖觉得"
            android:layout_below="@id/tv_evaluate_people_name"
            android:layout_toRightOf="@id/iv_evaluate_header"
            android:id="@+id/tv_evaluate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_999999"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="6dp"
            android:text="颜色:"
            android:layout_below="@id/tv_evaluate_content"
            android:layout_toRightOf="@id/iv_evaluate_header"
            android:id="@+id/tv_yanse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_999999"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="6dp"
            android:text="粉色:"
            android:layout_below="@id/tv_evaluate_content"
            android:layout_toRightOf="@id/tv_yanse"
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/text_999999"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="6dp"
            android:text="尺寸:"
            android:layout_below="@id/tv_evaluate_content"
            android:layout_toRightOf="@id/tv_color"
            android:id="@+id/tv_chicun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_999999"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="6dp"
            android:text="XL"
            android:layout_below="@id/tv_evaluate_content"
            android:layout_toRightOf="@id/tv_chicun"
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_evaluate_one"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:src="@mipmap/touxiang_muy_icon_normal_"
            android:layout_toRightOf="@id/iv_evaluate_header"
            android:layout_below="@id/tv_size"
            android:layout_marginRight="3dp"
            />
        <ImageView
            android:layout_marginRight="3dp"
            android:id="@+id/iv_evaluate_two"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:src="@mipmap/touxiang_muy_icon_normal_"
            android:layout_toRightOf="@id/iv_evaluate_one"
            android:layout_below="@id/tv_size"
            />
        <ImageView
            android:layout_marginRight="3dp"
            android:id="@+id/iv_evaluate_three"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:src="@mipmap/touxiang_muy_icon_normal_"
            android:layout_toRightOf="@id/iv_evaluate_two"
            android:layout_below="@id/tv_size"
            />

    </RelativeLayout>

</RelativeLayout>