<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="17dp"
        android:layout_marginTop="17dp"
        android:id="@+id/rl_rv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="26dp"
            android:id="@+id/rv_sanjiao"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/sanjiaoxing_my_icon_normal_"
            android:layout_width="6dp"
            android:layout_height="10dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rv_sanjiao"
            android:textSize="16sp"
            android:textColor="@color/wd_rv_title"
            android:id="@+id/wd_rv_title"
            android:text="秋季减肥该怎么做"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_kind"
            android:text="婴幼儿辅食"
            android:layout_marginRight="13dp"
            android:textColor="@color/wd_rv_title"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_neirong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_rv_title">

        <ImageView
            android:id="@+id/wd_rv_headview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@mipmap/touxiang_muy_icon_normal_"

            />

        <RelativeLayout
            android:id="@+id/rl_touting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/wd_rv_headview">

            <TextView
                android:id="@+id/wd_rv_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="陶云海"
                android:textColor="@color/wd_rv_title"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/wd_rv_touting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wd_rv_tv_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:src="@mipmap/yiyuantouting_my_icon_normal_" />


        </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="39dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/wd_rv_tt_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            android:gravity="end"
            android:text="39人听过"
            android:textColor="@color/wd_rv_ttrs"
            android:textSize="12sp" />
        <TextView

            android:text="￥"
            android:textColor="#e57591"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="17dp"

            android:text="1"
            android:id="@+id/wd_rv_money"
            android:textColor="#e57591"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_marginTop="17dp"
        android:background="@color/bg_color"
        android:layout_below="@+id/rl_neirong"
        android:layout_width="match_parent"
        android:layout_height="5dp">

    </FrameLayout>


</RelativeLayout>