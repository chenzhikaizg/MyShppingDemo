<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_yys_item"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:id="@+id/rl_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_head"
            android:scaleType="centerCrop"
            android:layout_width="94dp"
            android:layout_height="98dp"
            android:src="@mipmap/timg" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_zhiwei"
        android:textColor="@color/text_color_back"
        android:text="国家的一大堆"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:textSize="14sp"-->
            <!--android:layout_below="@id/tv_zhiwei"-->
            <!--android:textColor="@color/text_grey"-->
            <!--android:id="@+id/tv_danwei"-->
            <!--android:text="国家的一大堆"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:layout_below="@+id/tv_zhiwei"
            android:textColor="@color/text_color_back"
            android:id="@+id/tv_shanchang"
            android:text="国家的一大堆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_shanchang"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="bottom"
                android:src="@mipmap/haoping_my_icon_normal_"
                android:layout_marginRight="5dp"
                android:layout_width="11dp"
                android:layout_height="11dp" />

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tv_haoping"
                android:textSize="12sp"
                android:text="好评率99%"
                android:layout_gravity="bottom"
                android:textColor="@color/text_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@mipmap/dingdan_my_icon_normal_"
                android:layout_width="11dp"
                android:layout_height="11dp"
                />

            <TextView
                android:id="@+id/text_order_num"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:textColor="@color/text_999999"
                android:text="585单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/renshu_my_icon_normal_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_jie_num"
                android:text="98人"
                android:textSize="12sp"
                android:textColor="@color/text_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>